<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/bgColor"
    android:gravity="center_horizontal"
    android:padding="16dp"
    >

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:gravity="center_horizontal"
        android:paddingVertical="16dp"
        android:text="CALCULATE YOUR"
        android:textColor="#264653"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="73dp"
        android:layout_height="48dp"
        android:background="@color/textBlue"
        android:gravity="center_horizontal"
        android:text="AGE"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:gravity="center_horizontal"
        android:paddingVertical="16dp"
        android:text="IN MINUTES"
        android:textColor="#264653"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnDatePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELECT DATE"
        android:textSize="18sp"
        android:backgroundTint="@color/btnBgColor"
        android:textColor="@color/lightGrey"></Button>
    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:gravity="center_horizontal"
        android:paddingVertical="16dp"
        android:text="31.05.1988"
        android:textColor="#264653"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:paddingVertical="16dp"
        android:text="Selected Date"
        android:textColor="@color/lightGrey"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tvAgeInMinutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:gravity="center_horizontal"
        android:paddingVertical="16dp"
        android:text="140000000"
        android:textColor="#264653"
        android:textSize="35sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:paddingVertical="16dp"
        android:text="SELECT DATE"
        android:textColor="@color/lightGrey"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="@color/btnBgColor"
        />




</LinearLayout>
